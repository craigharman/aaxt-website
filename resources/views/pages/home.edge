    <div class="max-w-screen-xl px-4 mx-auto sm:px-6 lg:px-8">
      <div class="grid grid-cols-2 gap-8 md:grid-cols-2 lg:grid-cols-4">
        <div class="flex items-center justify-center col-span-1 md:col-span-2 lg:col-span-1">
