<!-- Features -->
<section class="bg-white" id="features">
  <div class="items-center w-full px-0 py-10 sm:py-12 md:py-16 mx-auto md:px-12 lg:px-16 xl:px-32 max-w-7xl">
    <div class="text-center mt-10 lg:mt-12 bg-neutral-50 md:rounded-2xl lg:rounded-[4rem] p-10 lg:p-20">
      <h2 class="text-3xl font-extrabold text-black lg:text-7xl tracking-tighter">Features
      </h2>
      <p class="max-w-2xl lg:mx-auto mt-4 text-lg leading-7 tracking-tight text-neutral-600">In addition to everything
        AdonisJS has to offer, AAXT adds:</p>
      <ul class="grid grid-cols-2 gap-4 mt-12 text-left" role="list">
        @!featureItem({ title: "AlpineJS, HTMX and Tailwind", description: `Installed, configured and ready to go.`})
        @!featureItem({ title: "HTMX Fragments", description: `Automatically receive what\'s needed; from entire pages,
        fragments or nothing!`})
        @!featureItem({ title: "Caching", description: `Out of the box on server (using BentoCache) and client (using
        ETag).`})
        @!featureItem({ title: "Structured views", description: `Using Adonis\'s Edge templating system.`})
        @!featureItem({ title: "Transitions", description: `Animate between HTMX requests using HTMX, AdonisJS or CSS
        transitions.`})
        @!featureItem({ title: "Preload", description: `Super responsive navigation thanks to the HTMX preload
        extension.`})
      </ul>
    </div>
  </div>
</section>
<!-- Getting started -->
<section class="w-full pt-20 pb-14 bg-black" id="GettingStarted">
  <div class="flex flex-col items-center justify-center max-w-6xl px-16 mx-auto text-center text-white sm:px-0">

    <h2 class="text-5xl font-bold mb-1.5">Get started</h2>
    <p class="mb-3 text-3xl font-medium">Just an npm install away.</p>
    <p class="inline-block text-base text-gray-500 sm:block">Replace my-axxt-project with the name of your project.</p>

    <img class="w-3/4 sm:w-2/3 lg:w-1/2" src="/aaxt-install.png" />

  </div>
</section>
<!-- FAQ -->
@!faq()
@!footer()
@end